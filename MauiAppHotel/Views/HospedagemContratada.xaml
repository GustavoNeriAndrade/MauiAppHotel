<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Green}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="Suite Super Luxo" 
               TextColor="{StaticResource Brown}"
               FontFamily="Kalam"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            
            <HorizontalStackLayout>
                
                <HorizontalStackLayout>
                    <Label Text="Adultos: " />
                    <Label Text="2" 
                           TextColor="{StaticResource Brown}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Criancas: " />
                    <Label Text="3" 
                           TextColor="{StaticResource Brown}" />
                </HorizontalStackLayout>
                
            </HorizontalStackLayout>
            
        </Frame>

        <Frame Margin="10">
            
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" />
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" />
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" />

                <Label Grid.Row="1" Grid.Column="0" Text="01/06/2025:" />
                <Label Grid.Row="1" Grid.Column="1" Text="08/06/2025:" />
                <Label Grid.Row="1" Grid.Column="2" Text="3:" />
                
            </Grid>
            
        </Frame>

        <Frame Margin="10">
            
            <HorizontalStackLayout>
                <Label Text="Valor total:" />
                <Label Text="R$ 750,00" />
            </HorizontalStackLayout>
            
        </Frame>

        <Button Text="Voltar"
                BackgroundColor="{StaticResource Brown}"
                HorizontalOptions="Center"
                Clicked="Button_Clicked" />

    </VerticalStackLayout>
    
</ContentPage>