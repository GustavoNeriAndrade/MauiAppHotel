<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Green}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10">
        <Label Text="Calculo da Diaria" 
            FontFamily="Kalam"
            FontSize="50"
            TextColor="{StaticResource Brown}" />

        <Frame Padding="10">
            
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0" 
                           Text="Adultos" />

                    <Label Grid.Row="0" Grid.Column="1" 
                           TextColor="{StaticResource Brown}" 
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2" 
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />
        
                    <Label Grid.Row="1" Grid.Column="0" 
                           Text="Criancas" />

                    <Label Grid.Row="1" Grid.Column="1" 
                           TextColor="{StaticResource Brown}" 
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2" 
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                </Grid>

                <Label Text="Escolha sua Suite" />

                <Picker x:Name="pck_quarto"
                        Title="Selecione sua Acodomacao" 
                        ItemDisplayBinding="{Binding Descricao}"/>

                <Frame Padding="10"
                       Margin="10">
                    <VerticalStackLayout>
                        <Label Text="Periodo da Estadia" />
                        
                        <HorizontalStackLayout>
                            <Label Text="Check-in:" />
                            <DatePicker x:Name="dtpck_checkin"
                                        DateSelected="dtpck_checkin_DateSelected"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Check-out:" />
                            <DatePicker x:Name="dtpck_checkout"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>

                <Button Text="Avancar" Clicked="Button_Clicked"
                        BackgroundColor="Brown"
                        TextColor="Beige"/>

                <Button Text="Sobre o Desenvolvedor"
                        BackgroundColor="Brown"
                        TextColor="Beige"
                        Margin="10"
                        Clicked="OnSobreClicked"/>


            </VerticalStackLayout>
            
        </Frame>
        
    </VerticalStackLayout>
   
</ContentPage>